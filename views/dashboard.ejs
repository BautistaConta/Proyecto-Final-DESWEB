<!DOCTYPE html>
<html>
<head>
  <title>Tus Tareas</title>
</head>
<body>
  <h1>Hola <%= username %> 👋</h1>
  <h2>Crear nueva tarea</h2>
  <form action="/tasks/crear" method="POST">
    <input type="text" name="title" placeholder="Título" required />
    <input type="text" name="description" placeholder="Descripción" />
    <button type="submit">Crear</button>
  </form>

  <h2>Tus tareas</h2>
  <ul>
    <% tareas.forEach(t => { %>
      <li>
        <strong><%= t.title %></strong> - <%= t.description %> 
        [<%= t.completed ? "✅" : "❌" %>]
        <form action="/tasks/eliminar/<%= t._id %>" method="POST" style="display:inline;">
          <button type="submit">Eliminar</button>
        </form>
        <a href="/tasks/editar/<%= t._id %>">Editar</a>
        <form action="/tasks/compartir/<%= t._id %>" method="POST" style="display:inline;">
          <input type="email" name="email" placeholder="Email del usuario" required />
           <button type="submit">Compartir</button>
           </form>
      </li>
      <ul>
  <% t.comments.forEach(c => { %>
    <li><strong><%= c.author.username || "Anónimo" %>:</strong> <%= c.text %></li>
  <% }) %>
</ul>

<!-- Agregar comentario -->
<form action="/tasks/comentar/<%= t._id %>" method="POST">
  <input type="text" name="text" placeholder="Comentario" required />
  <button type="submit">Comentar</button>
</form>

<!-- Etiquetas -->
<p>Etiquetas: <%= t.tags.join(", ") %></p>
<form action="/tasks/etiquetar/<%= t._id %>" method="POST">
  <input type="text" name="tag" placeholder="Agregar etiqueta" required />
  <button type="submit">Agregar</button>
</form>
    <% }) %>
  </ul>

  <a href="/logout">Cerrar sesión</a>
</body>
</html>
