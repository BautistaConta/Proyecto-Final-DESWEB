<h1>Editar tarea</h1>

<form action="/tasks/editar/<%= tarea._id %>" method="POST" class="mb-3">
  <div class="mb-3">
    <label for="title" class="form-label">Título</label>
    <input type="text" id="title" name="title" value="<%= tarea.title %>" required class="form-control" />
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Descripción</label>
    <input type="text" id="description" name="description" value="<%= tarea.description %>" class="form-control" />
  </div>

  <div class="form-check mb-3">
    <input class="form-check-input" type="checkbox" id="completed" name="completed" <%= tarea.completed ? "checked" : "" %> />
    <label class="form-check-label" for="completed">Completada</label>
  </div>

  <button type="submit" class="btn btn-primary">Guardar</button>
</form>

<a href="/tasks" class="btn btn-secondary">Volver</a>